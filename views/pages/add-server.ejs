<!DOCTYPE html>
<html lang="en">
  <head>
	<% include ../partials/header %>
	<title>Game Manager</title>
	<link href="/css/add-server.css" rel="stylesheet">
  </head>

  <body>
	<nav class="navbar navbar-inverse navbar-fixed-top">
	  <div class="container">
		<div class="navbar-header">
		  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		  </button>
		  <a class="navbar-brand" href="/">Game Manager</a>
		</div>
		<div id="navbar" class="collapse navbar-collapse">
          		<ul class="nav navbar-nav">
			      <li><a href="/dashboard">Dashboard</a></li>
				  <li><a href="/users">Users</a></li>
          		</ul>
        	</div><!--/.nav-collapse -->
	  </div>
	</nav>
		
    <div class="container">
	
		<% if(typeof error !== "undefined" && error !== null) { %>
		<div class="alert alert-danger" role="alert">				
		  <p><%= error %></p>
		</div>
		<% } %>	
		
		  <div class="form-group">
		    <label for="gameInput">Select a Game</label>
			<select class="form-control" name="game" onchange="game = this.value">
			  <option value = "">-- Select --</option>
			  <% games.forEach(function(game) { %>
				<option value="<%= game.id %>"><%= game.name %></option>
			  <% }); %> 
			</select>
		  </div>
		  <button type="submit" class="btn btn-default" onclick="if(game != '') window.location.href='/add-server/' + game">Continue</button>
    </div> <!-- /container -->

	<% include ../partials/javascript %>
  </body>

  <% include ../partials/footer %>
</html>
